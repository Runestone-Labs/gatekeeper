# Runestone Gatekeeper - Environment Configuration
# Copy this file to .env and customize as needed

# =============================================================================
# REQUIRED
# =============================================================================

# Secret for HMAC signing of approval tokens (minimum 32 characters)
# Generate with: openssl rand -base64 32
GATEKEEPER_SECRET=change-me-to-a-32-char-secret

# =============================================================================
# OPTIONAL - Server Configuration
# =============================================================================

# Port for the gatekeeper server (default: 3847)
GATEKEEPER_PORT=3847

# Base URL for approval links (default: http://localhost:${GATEKEEPER_PORT})
BASE_URL=http://localhost:3847

# Log level: debug | info | warn | error (default: info)
LOG_LEVEL=info

# =============================================================================
# OPTIONAL - Provider Configuration
# =============================================================================

# Approval provider: local | slack | runestone (default: local)
APPROVAL_PROVIDER=local

# Audit sink: jsonl | runestone (default: jsonl)
AUDIT_SINK=jsonl

# Policy source: yaml | runestone (default: yaml)
POLICY_SOURCE=yaml

# Path to policy file when using yaml source (default: ./policy.yaml)
POLICY_PATH=./policy.yaml

# Directory for data storage (approvals, audit logs)
DATA_DIR=./data

# =============================================================================
# OPTIONAL - Slack Provider (when APPROVAL_PROVIDER=slack)
# =============================================================================

# Slack incoming webhook URL for approval notifications
SLACK_WEBHOOK_URL=

# =============================================================================
# OPTIONAL - Runestone Cloud (when using runestone providers)
# =============================================================================

# API key for Runestone Cloud authentication
RUNESTONE_API_KEY=

# Runestone Cloud API endpoint
RUNESTONE_API_URL=https://api.runestone.dev
